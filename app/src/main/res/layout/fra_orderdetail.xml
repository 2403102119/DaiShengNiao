<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F6F6F6"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:scrollbars="none"
        android:layout_below="@id/llfanhui"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvState"
                android:text="确认收货"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_rect_white_5dp"
                android:minHeight="84dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/shouhuodizhi"
                    android:layout_width="11dp"
                    android:layout_height="12dp"/>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvSite"
                        android:text="收货地址：中原福塔 航海东路1206号"
                        android:textSize="13sp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvName"
                        android:text="张三：15036033457"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/txt_99"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:paddingBottom="20dp"
                android:background="@drawable/bg_rect_white_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="商品总价"
                        android:textSize="13sp"
                        android:textColor="@color/txt_66"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="¥"
                        android:textColor="@color/txt_lv8"
                        android:textSize="9sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvAllPrice"
                        android:text="79.00"
                        android:textColor="@color/txt_lv8"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="运费"
                        android:textSize="13sp"
                        android:textColor="@color/txt_66"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="免运费"
                        android:textColor="@color/txt_lv8"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="店铺优惠"
                        android:textSize="13sp"
                        android:textColor="@color/txt_66"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="暂无优惠"
                        android:textColor="#44D685"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="订单总价"
                        android:textSize="13sp"
                        android:textColor="@color/txt_33"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="¥"
                        android:textColor="@color/txt_lv8"
                        android:textSize="9sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvOrderPrice"
                        android:text="79.00"
                        android:textColor="@color/txt_lv8"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="55dp"
                android:background="@drawable/bg_rect_white_5dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="订单信息"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="订单编号"
                        android:textSize="13sp"
                        android:textColor="@color/txt_33"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvOrderNum"
                        android:text="42856789456455"
                        android:textColor="@color/txt_33"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/imCopy"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/copy"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="创建时间"
                        android:textSize="13sp"
                        android:textColor="@color/txt_33"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvChuangjian"
                        android:text="2020-10-21  14:30"
                        android:textColor="@color/txt_33"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llFukuan"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="付款时间"
                        android:textSize="13sp"
                        android:textColor="@color/txt_33"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvFukuan"
                        android:text="2020-10-21  14:30"
                        android:textColor="@color/txt_33"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llFahuo"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="发货时间"
                        android:textSize="13sp"
                        android:textColor="@color/txt_33"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvFahuo"
                        android:text="2020-10-21  14:30"
                        android:textColor="@color/txt_33"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llChengjiao"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="成交时间"
                        android:textSize="13sp"
                        android:textColor="@color/txt_33"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvChengjiao"
                        android:text="2020-10-21  14:30"
                        android:textColor="@color/txt_33"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="20dp"
                    android:background="#F2F2F2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:id="@+id/llCall"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="42dp">
                    <ImageView
                        android:src="@mipmap/lianximaijia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="联系卖家"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/txt_33"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/llfanhui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:src="@mipmap/fanhui"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llButton"
        android:background="@color/white"
        android:gravity="right|center_vertical"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tvCancel"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="11dp"
            android:visibility="visible"
            android:background="@drawable/xiangqing"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/txt_33"
            android:textSize="14sp"
            android:layout_width="82dp"
            android:layout_height="31dp"/>
        <TextView
            android:id="@+id/tvPay"
            android:visibility="visible"
            android:background="@drawable/zaixianzixun"
            android:gravity="center"
            android:text="支付"
            android:layout_marginRight="10dp"
            android:textColor="@color/main_color"
            android:textSize="14sp"
            android:layout_width="82dp"
            android:layout_height="31dp"/>
        <TextView
            android:id="@+id/tvDetail"
            android:visibility="gone"
            android:background="@drawable/xiangqing"
            android:gravity="center"
            android:text="详情"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/txt_33"
            android:textSize="14sp"
            android:layout_width="82dp"
            android:layout_height="31dp"/>
    </LinearLayout>
</RelativeLayout>