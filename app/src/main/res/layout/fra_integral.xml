<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F6F6F6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/jifenbg"
        android:orientation="vertical"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="162dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="积分商城"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="购物送积分"
                android:textColor="#F7DDC8"
                android:textSize="13sp"
                android:layout_marginLeft="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="13dp"
            android:background="@drawable/bg_rect_white_5dp"
            android:orientation="vertical"
            android:paddingLeft="19dp"
            android:layout_width="match_parent"
            android:layout_height="98dp">
             <TextView
                 android:text="我的积分"
                 android:textSize="13sp"
                 android:textColor="#666666"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvJifen"
                    android:text="1500"
                    android:textColor="@color/txt_33"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvDetail"
                    android:text="积分明细"
                    android:gravity="center"
                    android:background="@drawable/jifenmingxi"
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_width="90dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/tvRule"
                    android:text="积分规则"
                    android:gravity="center"
                    android:background="@drawable/login_20"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_width="90dp"
                    android:layout_height="30dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>