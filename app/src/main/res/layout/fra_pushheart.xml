<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/etContent"
        android:hint="#孩子如何教育#"
        android:textSize="12sp"
        android:gravity="top"
        android:padding="15dp"
        android:textColor="@color/txt_33"
        android:background="#F6F6F6"
        android:minHeight="160dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="11dp"
        android:background="#F2FFF9"
        android:text="选择孩子年龄段"
        android:textColor="#44D685"
        android:layout_width="match_parent"
        android:layout_height="38dp"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/age"
        android:layout_width="77dp"
        android:layout_height="25dp">
        <Spinner
            android:id="@+id/spcheliangleixing"
            android:overlapAnchor="false"
            android:gravity="center"
            android:padding="0dp"
            android:background="@drawable/spinner_province_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvPush"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="发布"
        android:textColor="@color/white"
        android:background="@drawable/login_20"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
</LinearLayout>