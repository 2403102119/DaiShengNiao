<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

     <com.scwang.smartrefresh.layout.SmartRefreshLayout
         android:id="@+id/smart"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <com.scwang.smartrefresh.layout.header.ClassicsHeader
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
         <androidx.core.widget.NestedScrollView
             android:layout_marginBottom="110dp"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <LinearLayout
                 android:layout_margin="11dp"
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <LinearLayout
                     android:id="@+id/llOne"
                     android:orientation="vertical"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <LinearLayout
                         android:gravity="center_vertical"
                         android:orientation="horizontal"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">
                         <com.makeramen.roundedimageview.RoundedImageView
                             android:id="@+id/riIcon"
                             android:scaleType="centerCrop"
                             app:riv_oval="true"
                             android:src="@mipmap/touxiang"
                             android:layout_width="28dp"
                             android:layout_height="28dp"/>
                         <LinearLayout
                             android:layout_marginLeft="10dp"
                             android:orientation="vertical"
                             android:layout_width="0dp"
                             android:layout_weight="1"
                             android:layout_height="wrap_content">
                             <TextView
                                 android:id="@+id/tvTitle"
                                 android:text="用户昵称"
                                 android:textColor="@color/txt_33"
                                 android:textSize="13sp"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"/>
                         </LinearLayout>
                         <TextView
                             android:id="@+id/tvTime"
                             android:text="2020.11.24   14:00"
                             android:textSize="11sp"
                             android:textColor="@color/main_color"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>
                     </LinearLayout>
                     <TextView
                         android:id="@+id/tvConten"
                         android:layout_marginTop="15dp"
                         android:text="小姐姐的嗓子是天使吻过的吗？好漂亮啊~"
                         android:textSize="12sp"
                         android:textColor="@color/colorBlack"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"/>
                     <androidx.recyclerview.widget.RecyclerView
                         android:id="@+id/recyclerView"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"/>


                 </LinearLayout>
                 <LinearLayout
                     android:layout_marginTop="10dp"
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <LinearLayout
                         android:id="@+id/llDianzan"
                         android:gravity="center"
                         android:orientation="horizontal"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content">
                         <ImageView
                             android:id="@+id/imDianzan"
                             android:src="@mipmap/weidianzan"
                             android:layout_width="17dp"
                             android:layout_height="18dp"/>
                         <TextView
                             android:id="@+id/tvDianzan"
                             android:text="0"
                             android:textSize="12sp"
                             android:layout_marginLeft="5dp"
                             android:textColor="#70736E"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>
                     </LinearLayout>
                     <LinearLayout
                         android:id="@+id/llComment"
                         android:layout_marginLeft="20dp"
                         android:gravity="center"
                         android:orientation="horizontal"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content">
                         <ImageView
                             android:src="@mipmap/pinglun"
                             android:layout_width="17dp"
                             android:layout_height="18dp"/>
                         <TextView
                             android:id="@+id/imsubCommentList"
                             android:text="0"
                             android:textSize="12sp"
                             android:layout_marginLeft="5dp"
                             android:textColor="#70736E"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>
                     </LinearLayout>
                 </LinearLayout>
                 <LinearLayout
                     android:layout_marginTop="30dp"
                     android:gravity="center_vertical"
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <TextView
                         android:id="@+id/tvQuanbu"
                         android:text="全部评论"
                         android:textColor="@color/colorBlack"
                         android:textSize="13sp"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>
                     <TextView
                         android:id="@+id/tvZhikan"
                         android:text="只看作者"
                         android:layout_marginLeft="30dp"
                         android:textColor="@color/txt_66"
                         android:textSize="13sp"
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"/>
                     <LinearLayout
                         android:layout_marginLeft="@dimen/dp_10"
                         android:gravity="center"
                         android:orientation="horizontal"
                         android:background="@drawable/bg_cir_un_blue"
                         android:layout_width="100dp"
                         android:layout_height="25dp">
                         <Spinner
                             android:id="@+id/spinner"
                             android:overlapAnchor="false"
                             android:gravity="center"
                             android:padding="0dp"
                             android:background="@drawable/spinner_province_bg"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"/>
                     </LinearLayout>

                 </LinearLayout>

                 <androidx.recyclerview.widget.RecyclerView
                     android:id="@+id/rycomment"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"/>
             </LinearLayout>
         </androidx.core.widget.NestedScrollView>
     </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etComment"
                android:hint="请输入文字 评论动态"
                android:textSize="13sp"
                android:textColor="@color/txt_33"
                android:paddingLeft="10dp"
                android:background="@drawable/sousuokuang"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="33dp"/>
            <TextView
                android:id="@+id/tvSent"
                android:text="发送"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/login_20"
                android:textSize="15sp"
                android:layout_width="50dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>