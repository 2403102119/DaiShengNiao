<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <cn.ymex.widget.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="260dp"/>
            <TextView
                android:id="@+id/tvName"
                android:layout_marginTop="30dp"
                android:text="初中数学运算大法"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="¥"
                    android:textColor="#FF3E18"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvPrice"
                    android:text="980.00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FF3E18"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvOldPrice"
                    android:layout_marginLeft="16dp"
                    android:textSize="13sp"
                    android:text="原价:¥ 2388.20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvSalenum"
                    android:text="已售：4542"
                    android:textSize="12sp"
                    android:textColor="@color/txt_33"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvSkunum"
                    android:text="库存量：8000"
                    android:textSize="12sp"
                    android:textColor="@color/txt_33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginTop="20dp"
                android:background="#F6F6F6"
                android:layout_width="match_parent"
                android:layout_height="12dp"/>
            <LinearLayout
                android:id="@+id/llComment"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="39dp">
                <TextView
                    android:text="商品评价"
                    android:layout_marginLeft="10dp"
                    android:textColor="#020202"
                    android:textSize="13sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvCommnum"
                    android:text="451条"
                    android:textSize="12sp"
                    android:layout_marginRight="11dp"
                    android:textColor="@color/txt_99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/jiantou_zuo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:background="#F6F6F6"
                android:layout_width="match_parent"
                android:layout_height="12dp"/>
            <LinearLayout
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="49dp">
                <View
                    android:background="#020202"
                    android:layout_width="3dp"
                    android:layout_height="12dp"/>
                <TextView
                    android:text="商品详情"
                    android:textColor="#020202"
                    android:textSize="13sp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:background="#F6F6F6"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/zuozhexinxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAuthor"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="138dp">
               <com.makeramen.roundedimageview.RoundedImageView
                   android:id="@+id/riAimage"
                   android:src="@mipmap/logo"
                   android:scaleType="centerCrop"
                   app:riv_corner_radius="3dp"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_width="90dp"
                   android:layout_height="90dp"/>
                <LinearLayout
                    android:layout_marginLeft="17dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/tvAiNme"
                       android:text="Lorem "
                       android:textSize="16sp"
                       android:textStyle="bold"
                       android:textColor="@color/txt_33"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvAbirthday"
                        android:layout_marginTop="13dp"
                        android:text="出生年月：1996-12-10"
                        android:textColor="@color/txt_66"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvAschool"
                        android:layout_marginTop="6dp"
                        android:text="毕业院校：北京清华大学"
                        android:textColor="@color/txt_66"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
             <LinearLayout
                 android:background="#F6F6F6"
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <ImageView
                     android:layout_marginTop="20dp"
                     android:layout_marginBottom="20dp"
                     android:src="@mipmap/cainixihuan"
                     android:layout_gravity="center_horizontal"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
                 <androidx.recyclerview.widget.RecyclerView
                     android:id="@+id/recyclerView"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>
             </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/llService"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/kefu"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
            <TextView
                android:text="客服"
                android:textColor="#111111"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llEnshrine"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imEnshrine"
                android:src="@mipmap/shoucang"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
            <TextView
                android:id="@+id/tvEnshrine"
                android:text="收藏"
                android:textColor="#111111"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvAddCar"
            android:text="加入购物车"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:textColor="@color/white"
            android:background="@drawable/text_jiarugouwuche"
            android:layout_width="wrap_content"
            android:layout_height="36dp"/>
        <TextView
            android:id="@+id/tvBuy"
            android:text="立即购买"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:paddingLeft="18dp"
            android:layout_marginLeft="9dp"
            android:paddingRight="18dp"
            android:textColor="@color/white"
            android:background="@drawable/text_lijigoumai"
            android:layout_width="wrap_content"
            android:layout_height="36dp"/>

    </LinearLayout>

</RelativeLayout>