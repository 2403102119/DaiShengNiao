<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="9dp"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:paddingBottom="10dp"
    android:background="@drawable/bg_border_efefef_5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:layout_width="match_parent"
        android:layout_height="43dp">
        <TextView
            android:text="订单编号："
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvorderNo"
            android:text=""
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorBlack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvOrderStatus"
            android:textColor="@color/main_color"
            android:textSize="14sp"
            android:text="待发货"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riIcon"
            android:scaleType="centerCrop"
            app:riv_corner_radius="3dp"
            android:src="@mipmap/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvName"
                android:text="商品名称"
                android:textColor="@color/txt_33"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvSku"
                android:text="参数"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="12sp"
                android:textColor="@color/txt_66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvNumber"
                android:text="x1"
                android:textColor="@color/txt_66"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvPrice"
                android:text="¥0.00"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="12sp"
                android:textColor="@color/txt_66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:paddingRight="9dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTime"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/txt_99"
            android:text="日期：2020/10/28   14:00"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="合计：¥"
            android:textSize="12sp"
            android:textColor="@color/txt_66"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvRealAmount"
            android:text="0"
            android:textSize="18sp"
            android:textColor="@color/txt_lv8"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvCancel"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="11dp"
            android:visibility="visible"
            android:background="@drawable/bg_border_e71919_50dp"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="#FF2121"
            android:textSize="14sp"
            android:layout_width="82dp"
            android:layout_height="31dp"/>
        <TextView
            android:id="@+id/tvPay"
            android:visibility="visible"
            android:background="@drawable/zaixianzixun"
            android:gravity="center"
            android:text="支付"
            android:textColor="@color/main_color"
            android:textSize="14sp"
            android:layout_width="82dp"
            android:layout_height="31dp"/>
        <TextView
            android:id="@+id/tvDetail"
            android:visibility="visible"
            android:background="@drawable/xiangqing"
            android:gravity="center"
            android:text="详情"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/txt_33"
            android:textSize="14sp"
            android:layout_width="82dp"
            android:layout_height="31dp"/>
    </LinearLayout>
</LinearLayout>