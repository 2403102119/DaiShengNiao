<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="9dp"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:paddingBottom="10dp"
    android:background="@drawable/bg_border_efefef_5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:layout_width="match_parent"
        android:layout_height="43dp">
        <TextView
            android:id="@+id/tvName"
            android:text="用户0384"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvorderNo"
            android:text=""
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorBlack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvOrderStatus"
            android:textColor="@color/txt_99"
            android:textSize="12sp"
            android:text="2020.12.23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <TextView
             android:text="合计：¥"
             android:textColor="@color/txt_66"
             android:textSize="12sp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvHeji"
            android:text="79.00"
            android:textSize="18sp"
            android:textColor="@color/txt_33"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="收益：¥"
            android:textColor="@color/txt_66"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvShouyi"
            android:text="79.00"
            android:textSize="18sp"
            android:textColor="@color/txt_33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>